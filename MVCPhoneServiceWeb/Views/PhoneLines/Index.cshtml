@model IEnumerable<Data.Models.PhoneLine>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PUK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PIN)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PUK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PIN)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PhoneNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PhoneNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PhoneNumber">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>